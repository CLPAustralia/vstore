{% extends 'base.html.twig' %}

{% block title %}
  Show Person
{% endblock %}

{% block body %}
  <p>Title: {{ person.title }}</p>
  <p>First Name: {{ person.firstName }}</p>
  <p>Last Name: {{ person.lastName }}</p>
  <ul>
    {% for address in person.addresses() %}
    <li>{{ address.type }}: {{ address.addressLine1 }}, {{ address.addressLine2 }}</li>
    {% endfor %}
  </ul>
{% endblock%}

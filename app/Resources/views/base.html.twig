             </style>
            <link rel="stylesheet" href="{{ asset('css/jquery-ui.css') }}">
            <link rel="stylesheet" href="{{ asset('css/jquery-ui.structure.css') }}">
            <link rel="stylesheet" href="{{ asset('css/jquery-ui.theme.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block header %}
            <ul id="nav-menu">
                <li><div>Person</div>
                    <ul>
                        <li><div><a href="{{ path('person_new') }}">Add</a></div></li>
                        <li><div><a href="{{ path('person_search') }}">Search</a></div></li>
                    </ul>
                </li>
                <li><div>Company</div>
                     <ul>
                         <li><div><a href="{{ path('company_new') }}">Add</a></div></li>

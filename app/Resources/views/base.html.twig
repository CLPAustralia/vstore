                    </ul>
                </li>
                <li><div>Product</div>
                     <ul>
                         <li><div><a href="{{ path('product_new') }}">Add</a></div></li>
                         <li><div><a href="{{ path('product_search') }}">Search</a></div></li>
                    </ul>
                </li>
            </ul>
        {% endblock%}
        {% block body %}{% endblock %}
        {% block sidebar %} {% endblock %}
        {% block footer %}<footer>&copy; Copyright 2017</footer>{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/jquery.js') }}"></script>
            <script src="{{ asset('js/jquery-ui.js') }}"></script>
            <script type="text/javascript">
                $(function(){$("#nav-menu").menu()});
            </script>
        {% endblock %}
    </body>
</html>
